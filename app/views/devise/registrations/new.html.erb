<% provide(:title, "Sign-up") %>
<div class="app app-default">

<div class="app-container app-login">
  <div class="flex-center">
    <div class="app-header"></div>
    <div class="app-body">
      <div class="loader-container text-center">
          <div class="icon">
            <div class="sk-folding-cube">
                <div class="sk-cube1 sk-cube"></div>
                <div class="sk-cube2 sk-cube"></div>
                <div class="sk-cube4 sk-cube"></div>
                <div class="sk-cube3 sk-cube"></div>
              </div>
            </div>
          <div class="title">Logging in...</div>
      </div>
      <div class="app-block">
        <div class="app-right-section">
          <div class="app-brand"><span class="highlight">Sign-up</span> fundPaddy</div>
          <div class="app-info">
            
            <ul class="list">
              <li>
                <div class="icon">
                  <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
                </div>
                <div class="title">Register <b> Account</b></div>
              </li>
              <li>
                <div class="icon">
                  <i class="fa fa-cubes" aria-hidden="true"></i>
                </div>
                <div class="title">Donate <b>Funds</b></div>
              </li>
              <li>
                <div class="icon">
                  <i class="fa fa-usd" aria-hidden="true"></i>
                </div>
                <div class="title">Financial <b>Freedom</b></div>
              </li>
            </ul>
          </div>
        </div>
        <div class="app-form">
          <div class="form-suggestion">
            Create an account for free.
          </div>


          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
<!-- 
          <form action="/" method="POST"> -->

              <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">
                  <i class="fa fa-paper-plane" aria-hidden="true"></i></span>
                <%= f.text_field :fullname, placeholder: "Enter Fullname", class: 'form-control', 'aria-describedby': 'basic-addon1' %>
                <!-- 
                <input type="text" class="form-control" placeholder="Enter Fullname" aria-describedby="basic-addon1" name="fullname"> -->
              </div>

              <div class="input-group">
                <span class="input-group-addon" id="basic-addon2">
                  <i class="fa fa-user" aria-hidden="true"></i></span>

               <%= f.email_field :email, placeholder: "Valid Email", class: 'form-control', 'aria-describedby': 'basic-addon2' %>
<!-- 
                <input type="text" class="form-control" placeholder="email" aria-describedby="basic-addon2" name="email"> -->
              </div>

              <div class="input-group">

                <span class="input-group-addon" id="basic-addon3">
                  <i class="fa fa-key" aria-hidden="true"></i></span>

                    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (Minimum: 6 chars)", class: 'form-control', 'aria-describedby': 'basic-addon3' %>

              <!--   <input type="text" class="form-control" placeholder="Password" aria-describedby="basic-addon3"> -->
              </div>

              <div class="input-group">
                <span class="input-group-addon" id="basic-addon4">
                  <i class="fa fa-check" aria-hidden="true"></i></span>

                
                   <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: 'form-control', 'aria-describedby': 'basic-addon4' %>
                   <!-- 
                <input type="text" class="form-control" placeholder="Confirm Password" aria-describedby="basic-addon4"> -->
              </div>


                <div class="input-group">
                <span class="input-group-addon" id="basic-addon2">
                  <i class="fa fa-user-plus" aria-hidden="true"></i></span>

               <%= f.email_field :referrer, placeholder: "referrer email(optional)", class: 'form-control', 'aria-describedby': 'basic-addon2' %>
<!-- 
                <input type="text" class="form-control" placeholder="email" aria-describedby="basic-addon2" name="email"> -->
              </div>
              <div class="text-center">

                  <div class="actions">
                        <%= f.submit "Sign up", class: "btn btn-success btn-submit" %>
                  </div> 
                  <!-- 
                  <input type="submit" class="btn btn-success btn-submit" value="Register"> -->
              </div>

               <% end %>
                  <hr/>
                <%= render "devise/shared/links" %>
       <!--    </form> -->
          <div class="form-line">
            <div class="title">OR</div>
          </div>
          <div class="form-footer">
            <button type="button" class="btn btn-default btn-sm btn-social __facebook">
              <div class="info">
                <i class="icon fa fa-facebook-official" aria-hidden="true"></i>
                <span class="title">Register w/ Facebook</span>
              </div>
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="app-footer">
    </div>
  </div>
</div>

  </div>
