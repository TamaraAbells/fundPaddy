

    <%= form_for(@set_account, :html => {id: "settingsForm"}) do |f| %>
    <div class="row">
      
      <div class="col-md-6">
    
      <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-phone" aria-hidden="true"></i></span>


      <%= f.text_field :phone, placeholder: "Phone Number", class: 'form-control', 'aria-describedby': 'basic-addon1', required: true %>

     <!--  <input type="text" class="form-control" placeholder="08099223047" aria-describedby="basic-addon1" disabled> -->
  
    </div>

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-bank" aria-hidden="true"></i></span>

         <%= f.text_field :bank_name, placeholder: "Bank Name", class: 'form-control', 'aria-describedby': 'basic-addon1', required: true %>
      <!-- 
      <input type="text" class="form-control" placeholder="Bank Name" aria-describedby="basic-addon1" value=""> -->
    </div>

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-user" aria-hidden="true"></i></span>

         <%= f.text_field :acc_no, placeholder: "Account Number", class: 'form-control', 'aria-describedby': 'basic-addon1', required: true %>
      
    <!--   <input type="text" class="form-control" placeholder="Account Number" aria-describedby="basic-addon1" value=""> -->
    </div>

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-navicon" aria-hidden="true"></i></span>

         <%= f.text_field :acc_name, placeholder: "Account Name", class: 'form-control', 'aria-describedby': 'basic-addon1', required: true %>
    <!--   
      <input type="text" class="form-control" placeholder="Account Name" aria-describedby="basic-addon1" value=""> -->
    </div>

   
  </div>
 <div class="col-md-6">
     <select class="select2 form-control">
      <option value="NA">Select Country</option>
      <option value="NG">Nigeria</option>
      <option value="SA">South Africa</option>
      <option value="GH">Ghana</option>
    </select>
    
      <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">
        <i class="fa fa-bitcoin" aria-hidden="true"></i></span>
       <%= f.text_field :bitcoin_address, placeholder: "Bitcoin Address (Optional)", class: 'form-control', 'aria-describedby': 'basic-addon1' %>
      
    </div>


     <textarea name="name" rows="3" class="form-control", placeholder="About You ..."></textarea>

 </div>
 <div class="form-footer">
    <div class="form-group">
      <div class="col-md-9 col-md-offset-3">

        <%= f.submit "Save", class: "btn btn-primary" %>
        <!-- <button type="submit" class="btn btn-primary">Save</button> -->
        <button type="button" class="btn btn-default">Cancel</button>
      </div>
    </div>
  </div>



</div>
 <% end %>

 <script type="text/javascript">
    $("settingsForm").validate();
 </script>